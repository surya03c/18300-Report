\setlength\columnsep{0.4cm}
\newlength\titlebox
\setlength\titlebox{4.9cm}
\thispagestyle{empty}
\pagestyle{empty}

\flushbottom \twocolumn \sloppy %

\def\addcontentsline#1#2#3{}

\def\maketitle{\par
 \begingroup
 \def\thefootnote{\fnsymbol{footnote}}
 \def\@makefnmark{\hbox to 0pt{$^{\@thefnmark}$\hss}}
 \if@twocolumn
   \twocolumn[\@maketitle]
 \else
   \global\@topnum\z@
   \@maketitle
 \fi
 \@thanks
 \endgroup
 \setcounter{footnote}{0}
 \let\maketitle\relax
 \let\@maketitle\relax
 }

\def\authorname#1{\gdef\@authorname{#1}}
\gdef\@authorname{Author}

\def\authoraddr#1{\gdef\@authoraddr{#1}}
\gdef\@authoraddr{Affiliation\\Country\\Contact Details}

\def\authoraddr#1{\gdef\@authoraddr{#1}}
\gdef\@authoraddr{Affiliation\\Country\\Contact Details}

\def\secondauthoraddr#1{\def\@secondauthoraddr{#1}}
\secondauthoraddr{}

\def\thirdauthoraddr#1{\def\@thirdauthoraddr{#1}}
\thirdauthoraddr{}



\def\makesecondauthoraddr{%
	\if \@secondauthoraddr
		%nothing to do if it is not defined
	\else 
		  \\
		  \large{\@secondauthoraddr}
	\fi
}

\def\makethirdauthoraddr{%
	\if \@thirdauthoraddr
		%nothing to do if it is not defined
	\else 
		  \\
		  \large{\@thirdauthoraddr}
	\fi
}



\author{
\begin{large}
  \begin{tabular}{c}
  \bf{\@authorname}\\[5mm]
  \@authoraddr
  \vspace{1mm}
  \makesecondauthoraddr
  \vspace{1mm}
  \makethirdauthoraddr
  \end{tabular}
\end{large}
}

\def\@maketitle{
  \begin{center}
    \LARGE{\bf\@title}
    \vskip 9mm
    \@author
  \end{center}
  \vskip 5ex
}

\renewcommand{\abstract}{\section*{Abstract}}
\newcommand{\keywords}{\paragraph{Keywords:}}
